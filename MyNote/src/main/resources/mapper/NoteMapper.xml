<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.mynote.MyNote.model.NoteMapper">

  <resultMap id="NoteResultMap" type="com.mynote.MyNote.model.Note">
    <id property="id" column="id"/>
    <result property="userId" column="user_id"/>
    <result property="title" column="title"/>
    <result property="content" column="content"/>
    <result property="createdAt" column="created_at"/>
    <result property="updatedAt" column="updated_at"/>
  </resultMap>

  <select id="findAll" resultMap="NoteResultMap">
    SELECT * FROM notes ORDER BY id DESC
  </select>

  <select id="findById" parameterType="int" resultMap="NoteResultMap">
    SELECT * FROM notes WHERE id = #{id}
  </select>

  <insert id="insert" parameterType="com.mynote.MyNote.model.Note" useGeneratedKeys="true" keyProperty="id">
    INSERT INTO notes (user_id, title, content, created_at, updated_at)
    VALUES (#{userId}, #{title}, #{content}, #{createdAt}, #{updatedAt})
  </insert>

  <update id="update" parameterType="com.mynote.MyNote.model.Note">
    UPDATE notes
    SET title = #{title},
        content = #{content},
        updated_at = #{updatedAt}
    WHERE id = #{id}
  </update>

  <delete id="deleteById" parameterType="int">
    DELETE FROM notes WHERE id = #{id}
  </delete>

</mapper>
